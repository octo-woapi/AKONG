		{
			"name": "loop-over-request-ratelimiting",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.collectionVariables.set(\"nbTries\", 10);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"const nbTries = pm.collectionVariables.get(\"nbTries\");",
							"",
							"console.log(nbTries);",
							"",
							"if (!nbTries && nbTries > 0){",
							"    postman.setNextRequest(\"loop-over-request-ratelimiting\");",
							"} else {",
							"    postman.setNextRequest(null);",
							"}",
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
